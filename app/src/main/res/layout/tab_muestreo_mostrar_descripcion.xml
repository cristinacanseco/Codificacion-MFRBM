<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Muestreos.MuestreoMostrar.TabMuestreoMostrarDescripcion">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/borde">

        <ImageView
            android:id="@+id/img_mm"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/qh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_nombre_mm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/bold"
            android:lineSpacingExtra="4dp"
            android:text="@string/muestreo_db"
            android:textColor="@color/cafe2"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_mm" />

        <View
            android:id="@+id/view_mm"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="#2e2e2e"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_nombre_mm" />

        <ImageView
            android:id="@+id/img_horafecha_mm"
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/calendario"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_mm"
            app:layout_constraintVertical_bias="0.051" />

        <TextView
            android:id="@+id/tv_fecha_mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/regular"
            android:text="@string/fecha"
            android:textColor="@color/cafe2"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_horafecha_mm"
            app:layout_constraintTop_toBottomOf="@+id/view_mm"
            app:layout_constraintVertical_bias="0.078" />

        <TextView
            android:id="@+id/tv_fecha_mm2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/regular"
            android:text="|"
            android:textColor="@color/cafe2"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_fecha_mm"
            app:layout_constraintTop_toBottomOf="@+id/view_mm"
            app:layout_constraintVertical_bias="0.07" />

        <TextView
            android:id="@+id/tv_hora_mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/regular"
            android:text="@string/hora"
            android:textColor="@color/cafe2"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tv_fecha_mm2"
            app:layout_constraintTop_toBottomOf="@+id/view_mm"
            app:layout_constraintVertical_bias="0.07999998" />

        <ImageView
            android:id="@+id/img_localizacion_mm"
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ubicacion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_horafecha_mm"
            app:layout_constraintVertical_bias="0.178" />

        <TextView
            android:id="@+id/tv_coordenadas_mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/regular"
            android:text="@string/ubicacion_B"
            android:textColor="@color/cafe2"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.064"
            app:layout_constraintStart_toEndOf="@+id/img_localizacion_mm"
            app:layout_constraintTop_toBottomOf="@+id/tv_fecha_mm2"
            app:layout_constraintVertical_bias="0.13" />

        <TextView
            android:id="@+id/tv_localizacion_mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/regular"
            android:text="@string/ubicacion_B"
            android:textColor="@color/cafe2"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.126"
            app:layout_constraintStart_toEndOf="@+id/img_localizacion_mm"
            app:layout_constraintTop_toBottomOf="@+id/tv_coordenadas_mm"
            app:layout_constraintVertical_bias="0.059" />


        <ImageView
            android:id="@+id/img_colores_mm"
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/forma"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_localizacion_mm"
            app:layout_constraintVertical_bias="0.19999999" />

        <ImageView
            android:id="@+id/img_descripcion_mm"
            android:layout_width="42dp"
            android:layout_height="38dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/textura"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_colores_mm"
            app:layout_constraintVertical_bias="0.19" />

        <TextView
            android:id="@+id/tv_forma_mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/regular"
            android:text="Forma"
            android:textColor="@color/cafe2"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.083"
            app:layout_constraintStart_toEndOf="@+id/img_colores_mm"
            app:layout_constraintTop_toBottomOf="@+id/tv_localizacion_mm"
            app:layout_constraintVertical_bias="0.22000003" />

        <TextView
            android:id="@+id/tv_textura_mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/regular"
            android:text="Textura"
            android:textColor="@color/cafe2"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.086"
            app:layout_constraintStart_toEndOf="@+id/img_descripcion_mm"
            app:layout_constraintTop_toBottomOf="@+id/tv_forma_mm"
            app:layout_constraintVertical_bias="0.3" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

